{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml",
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "hie.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell",
        "lhaskell"
      ],
      "settings": {
          "haskell": {
              "checkParents": "CheckOnSave",
              "checkProject": true,
              "maxCompletions": 400,
              "formattingProvider": "floskell",
              "plugin": {
                  "stan": {
                      "globalOn": true
                  }
              }
          }
      }
    }
  },
  "java.configuration.runtimes": [
      {
          "name": "JavaSE-21",
          "default": true
      }
  ]
}

